<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminUserDataTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:scrollbars="none"
        tools:context=".AdminUserDataTable">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ViewUserData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All User Data"
                    android:textColor="@color/gray_dark"
                    android:textSize="20sp"
                    android:fontFamily="@font/mulish_semibold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Click button below to view all user data."
                    android:fontFamily="@font/mulish"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/gotoViewUserData"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#E86C6B"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="View User Data"
                    android:textColor="#F4F5F5"
                    android:textSize="15sp"
                    app:cornerRadius="6dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="User Registration"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                android:fontFamily="@font/mulish_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Please fill out all required fields below. Your information is essential for us to provide quality service."
                android:fontFamily="@font/mulish"
                android:textColor="@color/gray"
                android:textSize="14sp"/>

            <!--Login Credential -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mulish_medium"
                    android:gravity="center"
                    android:text="Login Credential"
                    android:textColor="@color/grayish"
                    android:textSize="14sp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="end|center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Email Address"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegEmail_Admin"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Password"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegPassword_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomEditTextStyle"
                android:hint="Minimum of 8 characters"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/userRegPasswordConfirm_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomEditTextStyle"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <!--User Profile -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mulish_medium"
                    android:gravity="center"
                    android:text="User Profile"
                    android:textColor="@color/grayish"
                    android:textSize="15sp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="end|center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Last Name"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegLastName_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomEditTextStyle"
                android:hint="Input Last Name"
                android:inputType="text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="First Name"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegFirstName_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomEditTextStyle"
                android:hint="Input First Name"
                android:inputType="text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Birthday"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userBirthdate_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/DD/YYYY"
                android:focusable="false"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sex"
                    style="@style/CustomInputLabel"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Civil Status"
                    style="@style/CustomInputLabel"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/userSexSpinner_Admin"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_background"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/mulish"
                    style="@style/MySpinnerItemStyle"
                    android:hint="Sex"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="start|center"/>

                <Spinner
                    android:id="@+id/userCivilStatusSpinner_Admin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_background"
                    style="@style/MySpinnerItemStyle"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/mulish" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Contact Number"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegContactNum_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. 09123456789"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Home Address"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/userRegAddress_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please include house number or street"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <!--User Health Info -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mulish_medium"
                    android:gravity="center"
                    android:text="User Health Info"
                    android:textColor="@color/grayish"
                    android:textSize="15sp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#D5D5D5"
                    android:layout_gravity="end|center"/>
            </LinearLayout>

            <!--Blood Type-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Blood Type"
                style="@style/CustomInputLabel"/>

            <Spinner
                android:id="@+id/updateBloodTypeSpinner_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mulish"
                style="@style/MySpinnerItemStyle"
                android:hint="Sex"/>

            <!--Weight in Kg-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Weight in Kilograms"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/updateWeight_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. 59"
                android:inputType="number"
                style="@style/CustomEditTextStyle" />

            <!--Height-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Height in Centimeters"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/updateHeight_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. 168"
                style="@style/CustomEditTextStyle"
                android:inputType="number" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Food Allergies"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/updateFoodAllergies_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. Peanuts, Seafood"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Medical History"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/updateMedicalHistory_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. Hypertension"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Surgeries"
                style="@style/CustomInputLabel"/>

            <EditText
                android:id="@+id/updateSurgeries_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex. Urological Surgeries"
                style="@style/CustomEditTextStyle"
                android:inputType="none" />

            <Button
                android:id="@+id/userSubmitButton_Admin"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E86C6B"
                android:fontFamily="@font/mulish_semibold"
                android:text="Submit"
                android:textColor="#F4F5F5"
                android:textSize="15sp"
                app:cornerRadius="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:text="All the information you provide is securely stored within our Barangay system to ensure your safety and privacy."
                android:fontFamily="@font/mulish"
                android:textColor="@color/gray"
                android:textSize="14sp"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_loader">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/salmon_dark"
            android:id="@+id/user_progress_loader_progressbar_Admin" />
    </FrameLayout>

</RelativeLayout>
